<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3F51B5">

        <ImageView
            android:id="@+id/side_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_format_align_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/message_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/side_bar_img"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="get查询"
            android:textAllCaps="false"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="RecyclerView+swipeRefrashlayout+Header"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_tfl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TagFlowLayout热门搜索"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_retrofit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="okhttp+Retrofit+RxJava查询手机号码归属地"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_glide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Glide+Picasso请求加载网络图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_cardview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CardView上传图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/jPush_im"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="JPush（极光）即时通讯"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/greendao"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="GreenDao+Flow仿热门搜索，本地缓存"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/sliding"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="SlidingUpPanel仿美团配送"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>

</LinearLayout>
